extends layout

block content
  h1 Tron Timer
  .knobBox
    .secondBox
      input.knob.second(
                        data-min='0', 
                        data-max='60', 
                        data-bgcolor='#0C141F', 
                        data-fgcolor='#6FC3DF', 
                        data-displayinput='false', 
                        data-width='200', 
                        data-height='200', 
                        data-thickness='.45'
                        )
    .minuteBox
      input.knob.minute(
                        data-min='0',
                        data-max='60', 
                        data-bgcolor='#0C141F', 
                        data-fgcolor='#E6FFFF', 
                        data-displayinput='false', 
                        data-width='100', 
                        data-height='100', 
                        data-thickness='.3')
    .centerBox
      p#minute 30
  .buttonBox
    .action.play
    .addMinute
    .takeMinute
    .reset